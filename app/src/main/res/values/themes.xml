<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatApp" parent="Theme.AppCompat.Light.NoActionBar">


        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/holo_red_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi ="1" >?attr/actionBarStyle</item>
        <!-- Customize your theme here. -->
        <item name="android:itemBackground">@color/primary_purple</item>
        <item name="itemTextAppearance">@style/CustomTextMenu</item>
        <item name="backgroundTint">@style/menu</item>

    </style>
    
    <style name="menu" >
        <item name="backgroundTint">@color/mainColor</item>
        
    </style>

<style name="CustomTextMenu" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
    <item name="android:itemBackground">@color/primary_purple</item>


</style>


    <style name="Dialog">
        <item name="android:windowBackground">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowMinWidthMajor">80%</item>
        <item name="windowActionBar">false</item>

    </style>
</resources>